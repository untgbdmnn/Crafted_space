generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int      @id @default(autoincrement())
  username  String?
  email     String?
  password  String?
  token     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Social    Social[]
  Hero      Hero[]
  Title     Title[]

  @@map("_user")
}

model Social {
  social_id Int      @id @default(autoincrement())
  user_id   Int?
  email     String?
  phone     String?
  github    String?
  linked    String?
  telegram  String?
  instagram String?
  twitter   String?
  user      User?    @relation(fields: [user_id], references: [user_id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("_social")
}

model Hero {
  hero_id       Int      @id @default(autoincrement())
  user          User?    @relation(fields: [userUser_id], references: [user_id])
  slogan_in     String?
  slogan_en     String?
  userUser_id   Int?
  sub_slogan_id String?
  sub_slogan_en String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("_hero")
}

model Title {
  titleId     Int      @id @default(autoincrement())
  title_id    String?
  title_en    String?
  user        User?    @relation(fields: [userUser_id], references: [user_id])
  userUser_id Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("_title")
}
